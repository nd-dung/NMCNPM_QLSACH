@model List<BTL_NMCNPM_SE.G19_QLNSNhaNam.Models.vwNhanvienHoadonChitietHD>
<!DOCTYPE html>
<html lang="vi">
<head>
    <link href="@Url.Content("~/Front-end/css/PrintStyles.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="print-body">
        <div class="invoice-header">
            <h2>NHÀ SÁCH NHÃ NAM</h2>
            <p>Địa chỉ: 49 Chùa Láng, Đống Đa, Hà Nội</p>
            <p>Điện thoại: 024.62598850</p>
        </div>

        <h1>HÓA ĐƠN BÁN HÀNG</h1>

        <div class="invoice-details">
            <p><strong>Số hóa đơn:</strong> @Model.First().sMaHD</p>
            <p><strong>Ngày lập:</strong> @Model.First().dNgaylap</p>
            <p><strong>Mã nhân viên:</strong> @Model.First().sMaNV</p>
            <p><strong>Nhân viên:</strong> @Model.First().sTenNV</p>
            <p><strong>Khách hàng:</strong> ________________________</p>
        </div>

        <table>
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã sách</th>
                    <th>Tên sách</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@(Model.IndexOf(detail) + 1)</td>
                        <td>@detail.sMaSach</td>
                        <td>@detail.sTensach</td>
                        <td>@detail.iSoLuong</td>
                        <td>@detail.fDongia</td>
                        <td>@detail.fThanhtien</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="invoice-footer">
            <p><strong>Tổng cộng:</strong> @Model.Sum(d => d.fThanhtien)</p>
            <p><strong>Bằng chữ:</strong> ________________________</p>
        </div>

        <button class="no-print" onclick="window.print();">In Hóa Đơn</button>
    </div>
</body>
</html>
